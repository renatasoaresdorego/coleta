{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "rota": { "type": "string" },
    "capacidade": { "type": "integer", "minimum": 0 },
    "placa": { "type": "string", "pattern": "^[A-Z]{3}-\\d{4}$" },
    "statusServico": { "type": "boolean" }
  },
  "required": ["id", "rota", "capacidade", "placa", "statusServico"]
}